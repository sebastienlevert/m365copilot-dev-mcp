{
  "name": "@microsoft/m365copilot-dev-mcp",
  "version": "0.1.0",
  "description": "MCP server for Microsoft 365 Copilot development - Tools for building, deploying, and managing M365 Copilot extensions and agents",
  "type": "module",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "microsoft-365",
    "copilot",
    "m365",
    "copilot-studio",
    "agents-toolkit",
    "atk",
    "teams",
    "agents",
    "declarative-copilot",
    "copilot-extensions"
  ],
  "bin": {
    "m365copilot-dev-mcp": "./build/index.js"
  },
  "main": "./build/index.js",
  "files": [
    "build",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
